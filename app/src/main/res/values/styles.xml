<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CourierTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxBackgroundColor">@color/form_field_background</item>
        <item name="hintTextColor">@color/component_hard</item>
        <item name="boxStrokeColor">@color/box_stroke_color</item>
    </style>

    <style name="CourierErrorTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/component_text_danger</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CourierCardFooter" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="CourierButton" parent="Widget.Material3.Button" tools:ignore="ResourceCycle">
        <item name="backgroundTint">@color/component</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>